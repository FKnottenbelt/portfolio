<p><%= link_to gallery_item.title, gallery_show_path(gallery_item) %></p>
<p><%= gallery_item.subtitle %></p>
<p><%= gallery_item.body %></p>
<%= image_tag gallery_item.thumb_image unless gallery_item.thumb_image.nil? %>
<%= link_to 'Edit Portfolio Item', edit_gallery_path(gallery_item) if logged_in?(:site_admin) %>
<%= link_to 'Delete Portfolio Item', gallery_path(gallery_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
